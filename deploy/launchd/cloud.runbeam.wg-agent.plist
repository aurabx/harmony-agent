<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>cloud.runbeam.wg-agent</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/usr/local/bin/wg-agent</string>
        <string>--config</string>
        <string>/etc/wg-agent/config.toml</string>
    </array>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/var/log/wg-agent/stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/var/log/wg-agent/stderr.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>LAUNCH_DAEMON</key>
        <string>1</string>
    </dict>
    
    <key>ThrottleInterval</key>
    <integer>5</integer>
    
    <key>ProcessType</key>
    <string>Background</string>
    
    <key>Nice</key>
    <integer>-10</integer>
</dict>
</plist>
