{
  "examples": [
    {
      "description": "Connect action - Establish WireGuard tunnel",
      "message": {
        "action": "connect",
        "network": "default",
        "config": {
          "interface": "wg0",
          "mtu": 1420,
          "dns": ["10.100.0.2", "10.100.0.3"],
          "privateKeyPath": "/etc/wg-agent/private.key",
          "peers": [
            {
              "name": "runbeam-core",
              "publicKey": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOP==",
              "endpoint": "vpn.example.com:51820",
              "allowedIps": ["10.42.0.0/16", "fd42:1::/48"],
              "keepaliveSecs": 25
            }
          ]
        }
      }
    },
    {
      "description": "Connect with HTTP config - From Harmony application",
      "message": {
        "action": "connect",
        "network": "default",
        "config": {
          "interface": "wg0",
          "mtu": 1280,
          "dns": ["10.100.0.2"],
          "privateKeyPath": "/etc/aurabox/wireguard/private.key",
          "http": {
            "bindAddress": "0.0.0.0",
            "bindPort": 8081
          },
          "peers": [
            {
              "name": "runbeam-core",
              "publicKey": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOP==",
              "endpoint": "203.0.113.10:51820",
              "allowedIps": ["10.42.0.0/16", "fd42:1::/48"],
              "keepaliveSecs": 25
            }
          ]
        }
      }
    },
    {
      "description": "Connect to production network",
      "message": {
        "action": "connect",
        "network": "production",
        "config": {
          "interface": "wg1",
          "mtu": 1280,
          "dns": ["10.200.0.2"],
          "privateKeyPath": "/etc/wg-agent/production.key",
          "peers": [
            {
              "name": "prod-gateway",
              "publicKey": "1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefg==",
              "endpoint": "prod-vpn.example.com:51820",
              "allowedIps": ["10.100.0.0/16", "172.16.0.0/12"],
              "keepaliveSecs": 25
            }
          ]
        }
      }
    },
    {
      "description": "Disconnect action - Tear down tunnel for default network",
      "message": {
        "action": "disconnect",
        "network": "default"
      }
    },
    {
      "description": "Disconnect action - Tear down tunnel for production network",
      "message": {
        "action": "disconnect",
        "network": "production"
      }
    },
    {
      "description": "Status action - Get connection status (uses default network)",
      "message": {
        "action": "status"
      }
    },
    {
      "description": "Status action - Get connection status for specific network",
      "message": {
        "action": "status",
        "network": "production"
      }
    },
    {
      "description": "Reload action - Reload configuration for default network",
      "message": {
        "action": "reload",
        "network": "default",
        "config": {
          "interface": "wg0",
          "mtu": 1420,
          "dns": ["10.100.0.2"],
          "privateKeyPath": "/etc/wg-agent/private.key",
          "peers": [
            {
              "name": "runbeam-core",
              "publicKey": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOP==",
              "endpoint": "vpn.example.com:51820",
              "allowedIps": ["10.42.0.0/16", "fd42:1::/48"],
              "keepaliveSecs": 25
            },
            {
              "name": "backup-peer",
              "publicKey": "ZYXWVUTSRQPONMLKJIHGFEDCBAzyxwvutsrqponmlkjih==",
              "endpoint": "backup.example.com:51820",
              "allowedIps": ["10.43.0.0/16"],
              "keepaliveSecs": 30
            }
          ]
        }
      }
    },
    {
